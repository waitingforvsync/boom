{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BeebVSC Build Target 'doom.ssd'",
            "type": "shell",
            "problemMatcher": {
                "owner": "6502",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "command": "beebasm",
            "args": [
                "-i",
                "doom.6502",
                "-do",
                "doom.ssd",
                "-opt",
                "2",
                "-title",
                "BOOM"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "BeebVSC Test Target",
            "type": "shell",
            "command": "b2",
            "args": [
                "-0",
                "doom.ssd",
                "--boot"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}