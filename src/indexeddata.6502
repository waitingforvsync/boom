\\ Miscellaneous tables and data accessed via indexed mode
\\ which we don't want to cross page boundaries


\\ Used by the IRQ handler

.bottompalette
	EQUB &22, &81, &A4		; magenta, cyan, yellow

.toppalette
	EQUB &23, &86, &A5		; blue, red, green


\\ Used by line renderer / timer bars

.leftmask
	EQUB &FF,&77,&33,&11
.rightmask
	EQUB &00,&88,&CC,&EE
.pixelmask
	EQUB &88,&44,&22,&11


\\ Used by distancealongray

.dartablelo
	EQUB LO(distancealongray0), LO(distancealongray1), LO(distancealongray2_stub), LO(distancealongray3_stub)


\\ Colour tables

Black = %00000000
Blue  = %00001111
Red   = %11110000
Green = %11111111

MACRO COL c0, c1, c2, c3
	EQUB (c0 AND &88)+(c1 AND &44)+(c2 AND &22)+(c3 AND &11)
ENDMACRO

.colourtab0
	COL Black, Black, Black, Black      : colour_black = 0
	COL Blue,  Black, Black, Black      : colour_deep_blue = 1
	COL Blue,  Black, Blue,  Black      : colour_dark_blue = 2
	COL Blue,  Blue,  Blue,  Black      : colour_medium_blue = 3
	COL Blue,  Blue,  Blue,  Blue       : colour_bright_blue = 4
	COL Red,   Black, Black, Black      : colour_deep_red = 5
	COL Red,   Black, Red,   Black      : colour_dark_red = 6
	COL Red,   Red,   Red,   Black      : colour_medium_red = 7
	COL Red,   Red,   Red,   Red        : colour_bright_red = 8
	COL Green, Black, Black, Black      : colour_deep_green = 9
	COL Green, Black, Green, Black      : colour_dark_green = 10
	COL Green, Green, Green, Black      : colour_medium_green = 11
	COL Green, Green, Green, Green      : colour_bright_green = 12
	COL Red,   Blue,  Blue,  Blue       : colour_violet = 13
	COL Red,   Blue,  Red,   Blue       : colour_purple = 14
	COL Red,   Red,   Red,   Blue       : colour_fuchsia = 15
	COL Green, Blue,  Blue,  Blue       : colour_teal = 16
	COL Green, Blue,  Green, Blue       : colour_sky_blue = 17
	COL Green, Green, Green, Blue       : colour_turquoise = 18
	COL Green, Red,   Red,   Red        : colour_orange= 19
	COL Green, Red,   Green, Red        : colour_olive = 20
	COL Green, Green, Green, Red        : colour_autumn_green = 21
	
.colourtab1
	COL Black, Black, Black, Black      ; colour_black
	COL Black, Black, Blue,  Black      ; colour_deep_blue
	COL Black, Blue,  Black, Blue       ; colour_dark_blue
	COL Blue,  Black, Blue,  Blue       ; colour_medium_blue
	COL Blue,  Blue,  Blue,  Blue       ; colour_blue
	COL Black, Black, Red,   Black      ; colour_deep_red
	COL Black, Red,   Black, Red        ; colour_dark_red
	COL Red,   Black, Red,   Red        ; colour_medium_red
	COL Red,   Red,   Red,   Red        ; colour_red
	COL Black, Black, Green, Black      ; colour_deep_green
	COL Black, Green, Black, Green      ; colour_dark_green
	COL Green, Black, Green, Green      ; colour_medium_green
	COL Green, Green, Green, Green      ; colour_bright_green
	COL Blue,  Blue,  Red,   Blue       ; colour_violet
	COL Blue,  Red,   Blue,  Red        ; colour_purple
	COL Red,   Blue,  Red,   Red        ; colour_fuchsia
	COL Blue,  Blue,  Green, Blue       ; colour_teal
	COL Blue,  Green, Blue,  Green      ; colour_sky_blue
	COL Green, Blue,  Green, Green      ; colour_turquoise
	COL Red,   Red,   Green, Red        ; colour_orange
	COL Red,   Green, Red,   Green      ; colour_olive
	COL Green, Red,   Green, Green      ; colour_autumn_green


\\ Used by timer bars

bar_magenta = &0F
bar_cyan = &F0
bar_yellow = &FF

.barcol1
	EQUB bar_magenta
	EQUB (bar_magenta AND &AA) OR (bar_cyan AND &55)
	EQUB bar_cyan
	EQUB (bar_yellow AND &AA) OR (bar_magenta AND &55)
	EQUB bar_yellow
	EQUB (bar_cyan AND &AA) OR (bar_yellow AND &55)
	EQUB bar_magenta
.barcol2
	EQUB bar_magenta
	EQUB (bar_cyan AND &AA) OR (bar_magenta AND &55)
	EQUB bar_cyan
	EQUB (bar_magenta AND &AA) OR (bar_yellow AND &55)
	EQUB bar_yellow
	EQUB (bar_yellow AND &AA) OR (bar_cyan AND &55)
	EQUB bar_magenta


IF P% > codestart+&100
	ERROR "Tables overran page"
ENDIF
	

ALIGN &100
